  primary: $colors.blue,
  secondary: $colors.orange-lt,
  success: $colors.earth,
  danger: $colors.fire,
  warning: $colors.yellow,
  info: $colors.air,
}

$fontFamily = 'brandon-grotesque', 'Avenir Next', HelveticaNeue, Helvetica, Arial, sans-serif

$transition = all .33s linear

$text-color = $colors.charcoal
