$colors = {
  white: #ffffff,
  orange-lt: #f5aa00,
  orange-md: #be6300,
  orange-dk: #6b533a,
  yellow: #f1d14d,
  charcoal: #363636,
  blue: #0090ff,
  red: #ad2323,
  air: #e4d81a,
  water: #315fc6,
  fire: #e43b1a,
  earth: #42c631,
  pink: #ff6bf9,
  santa: #d12f2f,
  rose: #d6376b,
}
