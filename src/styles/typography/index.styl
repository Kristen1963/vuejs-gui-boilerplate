// main controller file for the typography
// other files for sub functions of typography are required here while smaller base classes can be added directly to this file

@require('headings')
a
  transition: $transition
  text-decoration: none
  color: $colors.blue
  &:hover
    color: $colors.fire
    cursor: pointer
    
  &:active
    color: $colors.earth
p
  font-size: 1.2rem

ul
  list-style: none
  font-size: 1.2rem

  li:before
    content: ''
    display: inline-block
    background-image: url(https://deva.space/cdn/list-item.png)
    background-size: auto 100%
    background-position: center
    background-repeat: no-repeat
    width: 15px
    height: 15px
    margin-right: .3rem

caption
  display: flex
  margin: 1rem
  padding: 1rem
  font-size: 1rem
  border-top: 2px solid $colors.blue

.lead
  font-size: 1.5rem
  font-weight: 300

.hero
  padding: 3rem 2rem
  margin-bottom: 1rem

// mark text
mark
  background-color: $colors.orange-lt

s, strike, del
  text-decoration: line-through

u, ins
  text-decoration: underline

small, .small
  font-size: 80%

b, strong
  font-weight: 900

i, em
  font-style: italic

blockquote, .blockquote
  margin: 1rem
  font-size: 1.25rem

  footer, .footer
    display: block
    font-size: 80%
    color: $colors.charcoal

code
  background-color: $colors.charcoal
  color: $colors.yellow
  display: block
  padding: .5rem
  border-radius: .3rem
